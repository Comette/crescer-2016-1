<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Loja Ninja</title>    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/LojaNinja.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    @RenderSection("Styles", false)
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Loja Ninja", "Index", "Pedido", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div style="float:right;">
                    @if (ServicoDeSessao.Logado)
                    {
                        <p style="color: #5e5e5e; margin-top: 15px; display: inline-block; padding-right: 20px;">Bem vindo, @(((UsuarioLogadoModel)HttpContext.Current.Session["USUARIO_LOGADO"]).Nome)!</p>
                        <a href="@Url.Action("Logout")">
                            <span style="padding-right: 5px;" class="glyphicon glyphicon-log-out"></span>
                            SAIR
                        </a>
                    }
                    else
                    {
                        <span style="padding: 2px;display: inline-block;margin-top: 5px;">
                            <a href="@Url.Action("Login")" class="btn btn-success">
                                <span style="padding-right: 5px;" class="glyphicon glyphicon-log-in"></span>
                                ENTRAR
                            </a>
                        </span>
                    }
                </div>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Pedido <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Novo", "Pedido")">Novo pedido</a></li>
                            <li><a href="@Url.Action("Listagem", "Pedido")">Lista pedidos</a></li>
                        </ul>                       
                    </li>
                </ul>
            </div>            
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Loja Ninja CWI</p>
        </footer>
    </div>

    <script src="~/scripts/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>