@model LojaNinja.Dominio.Pedido
@{
    ViewBag.Title = "Deletar";
}

<h3>Tem certeza que deseja <span style="color: red; font-weight: bold;">excluir pemanentemente</span> o pedido abaixo?</h3>

<div style="display: inline-block;">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IDPedido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IDPedido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ValorPedido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValorPedido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataPedido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataPedido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataEntrega)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataEntrega)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Urgente)
        </dt>

        <dd>
            @{
                if (Model.Urgente == true)
                {
                    <div style="color: red; font-size: 20px; text-align:left">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>
                    </div>
                }
                else
                {
                    <div style="color: grey; font-size: 20px; text-align:left">
                        <span class="glyphicon glyphicon-minus"></span>
                    </div>
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NomeCliente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cidade)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

    </dl>
</div>
<div>
    <span style="position: relative;padding: 2px;display: inline-block;">
        <a href="@Url.Action("Excluido", new { id = Model.IDPedido})" class="btn btn-danger">
            <span style="padding-right: 3px;" class="glyphicon glyphicon-trash"></span>
            EXCLUIR
        </a>
    </span>
    <br />
    <span style="position: relative;padding: 2px;display: inline-block;">
        <a href="@Url.Action("Detalhes", new { id = Model.IDPedido })" class="btn btn-default">
            <span style="padding-right: 5px;" class="glyphicon glyphicon-arrow-left"></span>
            VOLTAR
        </a>
    </span>
</div>

