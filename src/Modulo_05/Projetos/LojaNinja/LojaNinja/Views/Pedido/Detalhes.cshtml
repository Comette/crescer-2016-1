@model LojaNinja.Dominio.Pedido

@{
    ViewBag.Title = "Detalhes";
}

<h2 style="margin-top: 35px;">Detalhes do Pedido</h2>
<hr style="margin-top: 10px;">
<div style="float: right; margin-right: 400px; margin-top: 80px;">
    <span style="padding: 2px;display: inline-block;margin-top: 10px;">
        <a href="@Url.Action("Novo", "Pedido", new { id = Model.IDPedido })" class="btn btn-warning">
            <span style="padding-right: 12px;" class="glyphicon glyphicon-pencil"></span>
            EDITAR
        </a>        
    </span>
    <br />
    <span style="padding: 2px;display: inline-block;">
        <a href="@Url.Action("Deletar", "Pedido", new { id=Model.IDPedido})" class="btn btn-danger">
            <span style="padding-right: 3px;" class="glyphicon glyphicon-trash"></span>
            EXCLUIR
        </a>        
    </span>
    <br />
    <span style="padding: 2px;display: inline-block;">
        <a href="@Url.Action("Listagem", "Pedido")" class="btn btn-default">
            <span style="padding-right: 10px;" class="glyphicon glyphicon-arrow-left"></span>
            VOLTAR
        </a>        
    </span>
</div>
<div style="display: inline-block;">    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IDPedido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IDPedido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ValorPedido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValorPedido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataPedido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataPedido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataEntrega)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataEntrega)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Urgente)
        </dt>

        <dd>
            @{
                if (Model.Urgente == true)
                {
                    <div style="color: red; font-size: 20px; text-align:left">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>
                    </div>
                }
                else
                {
                    <div style="color: grey; font-size: 20px; text-align:left">
                        <span class="glyphicon glyphicon-minus"></span>
                    </div>
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NomeCliente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cidade)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

    </dl>
</div>

