@model LojaNinja.MVC.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

@section Scripts {
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
}

<h2>Entrar</h2>

@using (Html.BeginForm("ValidarUser", "Usuario", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" } )                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Senha, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Senha, new { @class = "form-control" } )
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">                
                <button type="submit" class="btn btn-success">
                    <i style="padding-right: 5px;" class="glyphicon glyphicon-log-in"></i>
                    ENTRAR
                </button>
                <span style="padding: 2px;display: inline-block;">
                    <a href="@Url.Action("Index", "Pedido")" class="btn btn-default">
                        <span style="padding-right: 5px;" class="glyphicon glyphicon-arrow-left"></span>
                        VOLTAR
                    </a>
                </span>
            </div>
        </div>
        
    </div>
}

