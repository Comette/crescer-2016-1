@*<marquee>Preencha os campos abaixo para cadastrar um novo cavaleiro de Atena!</marquee>*@
<div id="toastErro" class="feedback-toast span12" style="display: none;">
    <div class="alert alert-error">
        <a class="close">x</a>
        <strong class="title">Ops!</strong>
        <span class="msg"></span>
    </div>
</div>
<div id="toastSucesso" class="feedback-toast span12" style="display: none;">
    <div class="alert alert-success">
        <a class="close">x</a>
        <strong class="title">Shimbalaiê!</strong>
        <span class="msg"></span>
    </div>
</div>
<div id="fomrCadastro">
    <button id="btnNovoCadastro" class="btn btn-default">Cadastrar Cavaleiro</button>
    <form id="frmNovoCavaleiro" method="POST">
        <!--Título Formulário-->
        <h4>Cadastro de Cavaleiros:</h4>
        <!--ID-->
        <input type="number" name="IdCavaleiro" style="display: none" />
        <!-- nome -->
        <label for="txtNomeCavaleiro">Nome</label>
        <input id="txtNomeCavaleiro" type="text" name="nome" placeholder="Ex: Shiryu" class="form-control">
        <!-- tipoSanguineo -->
        <label for="slTipoSanguineo">Tipo Sanguíneo</label>
        <select id="slTipoSanguineo" name="tipoSanguineo" class="form-control">
            <option selected>Selecione</option>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="AB">AB</option>
            <option value="O">O</option>
        </select>
        <!-- dataNascimento -->
        <label for="txtDtNascimento">Data de nascimento</label>
        <input id="txtDtNascimento" type="text" name="dataNascimento" placeholder="Ex: 4/11/2016" class="form-control">
        <!-- altura em metros -->
        <label for="nbAlturaMetros">Altura (metros)</label>
        <input id="nbAlturaMetros" type="number" name="alturaMetros" placeholder="Ex: 1.76" min="0" step="0.01" class="form-control"> <!-- step: https://developer.mozilla.org/pt-BR/docs/Web/HTML/Element/Input -->
        <!-- peso em kilos -->
        <label for="nbPesoKilos">Peso (kilos)</label>
        <input id="nbPesoKilos" type="number" name="pesoKg" placeholder="Ex: 73.5" min="0" step="0.01" class="form-control">
        <!-- signo -->
        <label for="slSigno">Signo</label>
        <select id="slSigno" name="signo" class="form-control">
            <option selected>Selecione</option>
            <option value="Aries">Áries</option>
            <option value="Touro">Touro</option>
            <option value="Gemeos">Gêmeos</option>
            <option value="Cancer">Câncer</option>
            <option value="Leao">Leão</option>
            <option value="Virgem">Virgem</option>
            <option value="Libra">Libra</option>
            <option value="Escorpiao">Escorpião</option>
            <option value="Sagitario">Sagitário</option>
            <option value="Capricornio">Capricórnio</option>
            <option value="Aquario">Aquário</option>
            <option value="Peixes">Peixes</option>
        </select>
        <!-- localNascimento -->
        <input type="number" name="IdLocalNascimento" style="display: none" />
        <label for="txtLocalNascimento">Local de nascimento</label>
        <input id="txtLocalNascimento" type="text" name="localNascimento" placeholder="Ex: Porto Alegre" class="form-control">
        <!-- localTreinamento -->
        <input type="number" name="IdLocalTreinamento" style="display: none" />
        <label for="txtLocalTreinamento">Local de treinamento</label>
        <input id="txtLocalTreinamento" type="text" name="localTreinamento" placeholder="Ex: Alvorada" class="form-control">
        <!-- Adicionar golpe -->
        <button id="btnAdicionarGolpe" type="button" class="btn btn-default">Adicionar golpe...</button>
        <ul id="novosGolpes"></ul>
        <!-- Adicionar imagem -->
        <button id="btnAdicionarImg" type="button" class="btn btn-default">Adicionar imagem...</button>
        <ul id="novasImagens"></ul>
        <button type="submit" class="btn btn-success">Cadastrar!</button>
        <button id="btnFecharCadastro" type="button" class="btn btn-default">Fechar</button>
    </form>
</div>

<hr>

<table class="table table-striped table-bordered" id="tabelaCavaleiros" align="center" style="width: auto; text-align:center;">
    <tr>
        <td colspan="3">
            <h3>Cavaleiros Cadastrados</h3>
        </td>
    </tr>

</table>

@section scripts {
    <script src="~/Scripts/Models/Cavaleiros.js"></script>
    <script src="~/Scripts/Views/CavaleiroCadastroView.js"></script>
    <script src="~/Scripts/Views/CavaleiroIndexView.js"></script>
    <script>

        var indexView = new CavaleiroIndexView({
            errorToast: new FeedbackToast({
                element: $('#toastErro')
            }),
            successToast: new FeedbackToast({
                element: $('#toastSucesso')
            }),
            cavaleirosUi: $('#tabelaCavaleiros'),
            urlCavaleiroGet: '@Url.Action("Get")',
            urlCavaleiroGetById: '@Url.Action("GetById")',
            urlCavaleiroPost: '@Url.Action("Post")',
            urlCavaleiroDelete: '@Url.Action("Delete")',
            urlCavaleiroPut: '@Url.Action("Put")',
        });
        indexView.render();
    </script>
    <script src="~/Scripts/Controller/CavaleiroController.js"></script>
}